opacity: 0.9;
}
#installing .installcontent{
	font-size:1em;
	font-weight: bold;
	text-align:center;
	line-height: 1.5em;
}
#installing>div{
	margin:auto; width:70%; background-color:#fff;
	border-radius: 5px;
	color:#333333;
	box-shadow: 0px 0px 10px 1px #666;
	-webkit-box-shadow: 0px 0px 10px 1px #666;
}
#installing p{
margin: 0;
}
#installing .description{
	padding: 0 15px;
}
#installing .installcontent{
	padding: 0 15px 15px;
}
#installing .installloading.iosinstalling{
	background-size: 16px 16px;
}
#installing .installloading{
	
	background: url(../app/img/loading-gif.gif);
	background-repeat:no-repeat;
	background-position:center;
	width:100%;
	height:32px;
	padding: 8px 0 8px 0;
