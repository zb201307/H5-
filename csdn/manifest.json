    },
    "orientation": [
        "portrait"
    ],
    "permissions": {
        "Cache": {
            "description": "管理应用缓存"
        },
        "Console": {
            "description": "跟踪调试输出日志"
        },
        "Device": {
            "description": "访问设备信息"
        },
        "Downloader": {
            "description": "管理文件下载任务"
        },
        "Events": {
            "description": "客户端扩展事件"
        },
        "File": {
            "description": "访问本地文件系统"
