        "Storage": {
            "description": "管理应用本地数据"
        },
        "UI": {
            "description": "管理系统原生控件"
        },
        "Runtime": {
            "description": "访问运行期环境"
        },
        "XMLHttpRequest": {
            "description": "跨域网络访问"
        },
        "Statistic": {
            "description": "统计功能"
